<!DOCTYPE html>


<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>WorkTracker</title>
        <meta name="description" content="Track your worktime">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/stylesheets/main.css">

        <!-- slider -->
        <link href="assets/nouislider.min.css" rel="stylesheet">
        <script src="assets/nouislider.min.js"></script>

        <!-- sidebar -->
        <link rel="stylesheet" href="/stylesheets/sidebar.css">

        <!-- FA -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />

    </head>

    <body onload="getData();">

        <div id="sidebar">

            <div class="sidebarHeader">
                <i onclick="toggleSidebar('close');" class="fas fa-times"></i>
            </div>

            <div onclick="updateProgram();" class="sidebarEntry">Update Webapp</div>
            <h4 class="version">0.0.1</h4>

        </div>

        <header>
            <div id="logoWrapper">
                <div id="logo">
                    <h1>WorkTracker</h1>
                    <div></div>
                </div>

                <i onclick="toggleSidebar('open')" class="fas fa-bars"></i>
                
            </div>
        </header>

        <main id="sliderGroups">

            <div id="weekSlider" class="sliderGroup">

                <div class="sliderGroupMeta">
                    <h2>Week Overview</h2>
                    <span id="weekSliderPerc" data-time="0">30%</span>
                </div>

                <div class="slider"></div>

            </div>

        </main>

        <div id="controls">
            <div>
                <span>Worked time:</span>
                <span id="time">0</span>
                <span id="timeLabel"></span>
            </div>
            
            <i onclick="controlsLogic('play')" class="far fa-play-circle"></i>
        </div>
        
        

        <script src="/scripts/main.js" async defer></script>
    </body>
</html>